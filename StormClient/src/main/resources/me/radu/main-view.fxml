<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: linear-gradient(to bottom, #3175cd, #14203d);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Header Section -->
    <top>
        <HBox spacing="15" style="-fx-padding: 10; -fx-background-color: #0d1f36;" BorderPane.alignment="CENTER">
            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #333951; -fx-padding: 10; -fx-background-radius: 10;">
                <Button mnemonicParsing="false" style="-fx-background-color: transparent;">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5" style="-fx-background-color: transparent;">
                            <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Miami" />
                            <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@sun.png" />
                            </ImageView>
                            <Label style="-fx-text-fill: white; -fx-font-size: 16;" text="22°" />
                        </HBox>
                    </graphic>
                </Button>
            </VBox>
        </HBox>
    </top>

    <!-- Center Section: Current Weather -->
    <center>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: transparent;">
            <VBox prefHeight="597.0" prefWidth="1022.0" spacing="20">
                <children>
                    <!-- Location Section -->
                    <Text style="-fx-fill: white; -fx-font-size: 24;" text="Location: Miami, FL" />

                    <!-- Weather Information -->
                    <VBox alignment="CENTER_LEFT" prefHeight="224.0" prefWidth="855.0" spacing="10" style="-fx-background-color: #24243e; -fx-padding: 20; -fx-background-radius: 10;">
                        <Label style="-fx-text-fill: white; -fx-font-size: 18;" text="Current Weather" />
                        <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="11:12 AM" />
                        <HBox spacing="10">
                            <ImageView fitHeight="64" fitWidth="64" pickOnBounds="true" preserveRatio="true">
                                <Image url="@sun.png" />
                            </ImageView>
                            <Label style="-fx-text-fill: white; -fx-font-size: 48;" text="23°C" />
                        </HBox>
                        <Label style="-fx-text-fill: white; -fx-font-size: 18;" text="Sunny" />
                    </VBox>

                    <!-- 5 Day Forecast Section -->
                    <Text style="-fx-fill: white; -fx-font-size: 24;" text="5 Day Forecast" />
                    <HBox spacing="15" style="-fx-background-color: transparent;">
                        <!-- Forecast Card 1 -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #333951; -fx-padding: 10; -fx-background-radius: 10;">
                            <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Monday" />
                            <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                                <Image url="@sun.png" />
                            </ImageView>
                            <Label style="-fx-text-fill: white; -fx-font-size: 16;" text="23°C / 18°C" />
                        </VBox>

                        <!-- Forecast Card 2 -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #333951; -fx-padding: 10; -fx-background-radius: 10;">
                            <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Tuesday" />
                            <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                                <Image url="@cloud.png" />
                            </ImageView>
                            <Label style="-fx-text-fill: white; -fx-font-size: 16;" text="21°C / 16°C" />
                        </VBox>

                        <!-- Forecast Card 3 -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #333951; -fx-padding: 10; -fx-background-radius: 10;">
                            <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Wednesday" />
                            <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                                <Image url="@rain.png" />
                            </ImageView>
                            <Label style="-fx-text-fill: white; -fx-font-size: 16;" text="20°C / 15°C" />
                        </VBox>

                        <!-- Forecast Card 4 -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #333951; -fx-padding: 10; -fx-background-radius: 10;">
                            <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Thursday" />
                            <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                                <Image url="@storm.png" />
                            </ImageView>
                            <Label style="-fx-text-fill: white; -fx-font-size: 16;" text="19°C / 14°C" />
                        </VBox>

                        <!-- Forecast Card 5 -->
                        <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #333951; -fx-padding: 10; -fx-background-radius: 10;">
                            <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Friday" />
                            <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                                <Image url="@sun-cloud.png" />
                            </ImageView>
                            <Label style="-fx-text-fill: white; -fx-font-size: 16;" text="22°C / 17°C" />
                        </VBox>
                    </HBox>
                </children>
            </VBox>
        </HBox>
    </center>
</BorderPane>
